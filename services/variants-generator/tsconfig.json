{
  "extends": "@vimmer/typescript-config/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "noEmit": true,
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"],
      "@vimmer/api/*": ["../../apps/api/src/*"]
    },
    "strict": true
  },
  "include": ["src", "."],
  "exclude": ["node_modules"]
}

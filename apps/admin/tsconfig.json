{
  "extends": "@vimmer/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@vimmer/api": ["../api/src/*"],
      "@vimmer/ui": ["../../packages/ui/src/*"],
      "@vimmer/validation": ["../../packages/validation/src/*"],
      "@vimmer/supabase": ["../../packages/supabase/src/*"],
      "@vimmer/email": ["../../packages/email/src/*"],
      "next-international/*": ["../../node_modules/next-international/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    // "outDir": "dist",
    // "rootDir": "./",
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../types",
    "next-env.d.ts",
    "next.config.js",
    "tailwind.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules, .next"]
}

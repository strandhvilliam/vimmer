{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@vimmer/api/*": [
        "../api/src/*"
      ],
      "@vimmer/validation/*": [
        "../../packages/validation/old/*"
      ],
      "@vimmer/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@vimmer/image-processing": [
        "../../packages/image-processing/src"
      ],
      "@vimmer/email/*": [
        "../../packages/email/src/*"
      ],
      "next-international/*": [
        "../../node_modules/next-international/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../types",
    "next-env.d.ts",
    "next.config.js",
    "tailwind.config.ts",
    ".next/types/**/*.ts",
    "sst-env.d.ts"
  ],
  "exclude": [
    "node_modules, .next"
  ]
}

{
  "name": "vimmer",
  "private": true,
  "scripts": {
    "check-aws-account": "if [ \"$(aws sts get-caller-identity --query 'Account' --output text)\" = \"975050331958\" ]; then echo 'âœ… Correct AWS account'; else echo 'âŒ Wrong AWS account, aborting.' && exit 1; fi",
    "serve:dev": "bun check-aws-account && sst dev --stage development",
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.146",
    "prettier": "^3.2.5",
    "turbo": "^2.5.0",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.35",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "dependencies": {
    "sst": "^3.11.21"
  }
}

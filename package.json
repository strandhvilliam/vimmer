{
  "name": "vimmer",
  "private": true,
  "scripts": {
    "check-aws-account": "if [ \"$(aws sts get-caller-identity --query 'Account' --output text)\" = \"975050331958\" ]; then echo 'âœ… Correct AWS account'; else echo 'âŒ Wrong AWS account, aborting.' && exit 1; fi",
    "serve:dev": "bun check-aws-account && sst dev --stage development",
    "deploy:prod": "bun check-aws-account && sst deploy --stage production",
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && echo 'ðŸ§¹ All node_modules directories have been removed'",
    "fix-react-versions": "node scripts/fix-react-versions.js"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.146",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.35",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "dependencies": {
    "@aws-sdk/lib-storage": "^3.828.0",
    "@trpc/client": "^11.4.2",
    "@trpc/server": "^11.4.2",
    "@trpc/tanstack-react-query": "^11.4.2",
    "@types/archiver": "^6.0.3",
    "archiver": "^7.0.1",
    "sst": "^3.17.5"
  }
}
